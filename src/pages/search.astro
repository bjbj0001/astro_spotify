---
import MainLayout from "../layouts/MainLayout.astro";
import ShelfSearch from "../components/ShelfSearch.astro";
import SearchCard from "../components/SearchCard.astro";
import TopBar from "../components/TopBar.astro";
const showNewBar = true;
const hasSearch = true;
---

<MainLayout hasSearch={true} title="Search">
  {hasSearch && <input type="text" />}

  <ShelfSearch>
    <SearchCard title="Podcast" />
    <SearchCard title="Made For You" showNewBar={true} />
    <SearchCard title="Charts " />
    <SearchCard title="New Release" />
    <SearchCard title="Discover" />
  </ShelfSearch>
  <ShelfSearch>
    <SearchCard title="Live Events" />
    <SearchCard title="New Releases" showNewBar={true} />
    <SearchCard title="Pop" />
    <SearchCard title="Summer" />
    <SearchCard title="Party" />
  </ShelfSearch>
</MainLayout>

<style>
  body {
    display: grid;
    grid-template-columns: auto 1fr;
    grid-template-rows: auto 1fr auto;
    grid-template-areas:
      "nav topbar"
      "nav main"
      "footer footer";
    height: 100%;
  }
  :global(main) {
    grid-area: main;
  }
  :global(nav) {
    grid-area: nav;
  }
  :global(.topbar) {
    grid-area: topbar;
  }
  :global(footer) {
    grid-area: footer;
  }

  main {
    display: grid;
    grid-auto-rows: min-content;
    gap: var(--space-xxl);

    background: linear-gradient(#1f1f1f 0, var(--surface-default) 100%) 0 0 / 100% 20rem no-repeat, var(--surface-default);

    overflow-y: auto;
    padding: var(--space-lg) var(--space-md);
  }

  @media (width > 1000px) {
    main {
      padding: var(--space-lg) var(--space-xl);
    }
  }
</style>
